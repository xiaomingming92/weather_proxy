{
  "name": "weather-proxy",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development && tsx watch src/server.ts",
    "build": "tsc -p tsconfig.prod.json && tsc-alias",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.js",
    "lint:watch": "eslint src --ext .ts,.js --watch",
    "lint:check": "eslint src --ext .ts,.js --format unix",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "lint:info": "eslint src --ext .ts,.js --max-warnings=0 --quiet",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "pm2:start": "pm2 start dist/server.js --name weather-proxy",
    "pm2:stop": "pm2 stop weather-proxy",
    "pm2:restart": "pm2 restart weather-proxy --update-env",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jose": "^6.1.3",
    "mariadb": "^3.4.5",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "prisma": "^7.3.0",
    "xmlbuilder2": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-jose": "^1.1.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "commitlint": "^20.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "^24.11.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
